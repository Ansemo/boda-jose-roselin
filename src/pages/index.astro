    <!-- Fuente adicional -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alegreya:ital,wght@0,400..900;1,400..900&family=Great+Vibes&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        background: #000;
        color: #fff;
        overflow-x: hidden;
        scroll-behavior: smooth;
      }

      .section {
        width: 100%;
        height: 100vh;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .section video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        pointer-events: none;
      }

      .countdown-section {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }

      .countdown-section video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        pointer-events: none;
      }

      .countdown-section > :not(video) {
        mask-image: url("/rough-texture-contador.png");
        color: #114221;
      }

      .countdown-title {
        font-size: 49px;
        font-family: "Great Vibes", serif;
        z-index: 1;
      }

      .countdown-timer {
        display: flex;
        justify-content: center;
        gap: 20px;
        font-size: 1.5rem;
        font-family: "Alegreya", serif;
        z-index: 1;
      }

      .time-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 8px;
      }

      .time-value {
        font-size: 3rem;
        font-weight: bold;
      }

      .time-label {
        font-size: 1.1rem;
        margin-top: 5px;
      }
    </style>
  </head>
  <body>
    <!-- Video 1 -->
    <div class="section">
      <video
        data-src="/videos/Escena-01.mp4"
        autoplay
        muted
        playsinline
        loop
        class="lazy-video"
        preload="metadata"
        poster="/Fondo.png"
      ></video>
    </div>

    <!-- Video 2 -->
    <div class="section">
      <video
        data-src="/videos/Escena-02.mp4"
        autoplay
        muted
        playsinline
        loop
        class="lazy-video"
        preload="metadata"
        poster="/Fondo.png"
      ></video>
    </div>

    <!-- Video 3 -->
    <div class="section">
      <video
        data-src="/videos/Escena-03.mp4"
        autoplay
        muted
        playsinline
        loop
        class="lazy-video"
        preload="metadata"
        poster="/Fondo.png"
      ></video>
    </div>

    <!-- Contador con video de fondo -->
    <div class="countdown-section">
      <video
        data-src="/videos/invitacionFondo.mp4"
        autoplay
        muted
        playsinline
        loop
        class="lazy-video"
        preload="metadata"
        poster="/images/poster-invitacion.jpg"
      ></video>
      <div class="countdown-title">¡Nuestra boda será en:</div>
      <div class="countdown-timer">
        <div class="time-box">
          <div id="days" class="time-value">0</div>
          <div class="time-label">Días</div>
        </div>
        <div class="time-box">
          <div id="hours" class="time-value">0</div>
          <div class="time-label">Horas</div>
        </div>
        <div class="time-box">
          <div id="minutes" class="time-value">0</div>
          <div class="time-label">Minutos</div>
        </div>
        <div class="time-box">
          <div id="seconds" class="time-value">0</div>
          <div class="time-label">Segundos</div>
        </div>
      </div>
    </div>

    <script is:inline>
      // Lazy load para videos
      document.addEventListener("DOMContentLoaded", () => {
        const lazyVideos = document.querySelectorAll(".lazy-video");
        const observer = new IntersectionObserver((entries, observer) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const video = entry.target;
              video.src = video.dataset.src;
              video.load();
              observer.unobserve(video);
            }
          });
        });

        lazyVideos.forEach((video) => observer.observe(video));
      });

      // Función para actualizar el contador regresivo
      function updateCountdown() {
        const weddingDate = new Date("2024-12-14T00:00:00-05:00");
        const now = new Date();
        const timeDifference = weddingDate - now;

        if (timeDifference <= 0) {
          document.querySelector(".countdown-title").innerText =
            "¡Hoy es el gran día!";
          document.querySelector(".countdown-timer").style.display = "none";
          return;
        }

        const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
        const hours = Math.floor((timeDifference / (1000 * 60 * 60)) % 24);
        const minutes = Math.floor((timeDifference / (1000 * 60)) % 60);
        const seconds = Math.floor((timeDifference / 1000) % 60);

        document.getElementById("days").innerText = days;
        document.getElementById("hours").innerText = hours;
        document.getElementById("minutes").innerText = minutes;
        document.getElementById("seconds").innerText = seconds;
      }

      setInterval(updateCountdown, 1000);
      updateCountdown();
    </script>
  </body>
</html>
